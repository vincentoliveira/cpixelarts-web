{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}">
                cPaint
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li{% if path('draw_index') in currentPath %} class="active"{% endif %}>
                    <a href="{{ path('draw_index') }}">Draw</a>
                </li>
                <li{% if path('gallery_index') in currentPath%} class="active"{% endif %}>
                    <a href="{{ path('gallery_index') }}">Gallery</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hi {{ app.user.username }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Profile</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    </ul>
                </li>
                {% else %}
                <li{% if path('fos_user_security_login') in currentPath%} class="active"{% endif %}>
                    <a href="{{ path('fos_user_security_login') }}">Login</a>
                </li>
                <li{% if path('fos_user_registration_register') in currentPath%} class="active"{% endif %}>
                    <a href="{{ path('fos_user_registration_register') }}">Sign up</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
