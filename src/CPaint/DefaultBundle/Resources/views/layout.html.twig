<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}cPaint - The first collaborative Pixel Art app{% endblock %}</title>
        {% block meta %}
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="title" content="{{ block('title') }}"/>
        <meta name="description" content="{% block description %}cPaint is the first collaborative Pixel Art app. With cPaint, you can create or edit drawings, share it and much more. For more information, visit {{ url('homepage') }}{% endblock %}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta property="fb:app_id" content="323063997879046" />
        <meta property="og:title" content="{{ block('title') }}" />
        <meta property="og:description" content="{{ block('description') }}" />
        <meta property="og:image" content="{% block image %}{{ asset('bundles/cpaintdefault/images/logo.png') }}{% endblock %}"
        <meta property="og:site_name" content="cPaint" />
        <meta property="og:url" content="{% block url %}{{ url('homepage') }}{% endblock url %}" />
        <meta property="og:type" content="website" />
        <meta name="twitter:card" content="photo" />
        <meta name="twitter:site" content="@cPaintApp" />
        <meta name="twitter:title" content="{{ block('title') }}" />
        <meta name="twitter:description" content="{{ block('description') }}" />
        <meta name="twitter:image" content="{{ block('image') }}" />
        <meta name="twitter:url" content="{{ block('url') }}" />
        <meta itemprop="name" content="{{ block('title') }}">
        <meta itemprop="description" content="{{ block('description') }}">
        <meta itemprop="image" content="{{ block('image') }}">
        {% endblock %}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/cpaintdefault/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/cpaintdefault/css/bootstrap-theme.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/cpaintdefault/css/styles.css') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" ref="{{ asset('favicon.ico') }}">
    </head>
    <body>
        <div class="container-fluid">
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {% autoescape false %}{{ message }}{% endautoescape %}
            </div>
        {% endfor %}
        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {% autoescape false %}{{ message }}{% endautoescape %}
            </div>
        {% endfor %}
        </div>
        {% include "CPaintDefaultBundle::_menu.html.twig" %}
        {% block content %}{% endblock %}
        {% include 'CPaintDefaultBundle::_footer.html.twig' %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/spin.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/main.js') }}"></script>
            {% if app.environment == "prod" %}<script>(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');ga('create','UA-44614143-5','auto');ga('send','pageview');</script>{% endif %}
            <script>window.fbAsyncInit=function(){FB.init({appId:'323063997879046',xfbml:true,version:'v2.1'});};(function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(d.getElementById(id)){return;}js=d.createElement(s);js.id=id;js.src="//connect.facebook.net/en_US/sdk.js";fjs.parentNode.insertBefore(js,fjs);}(document,'script','facebook-jssdk'));</script>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
        {% endblock %}
    </body>
</html>