<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}cPaint - The collaborative Pixel Art app{% endblock %}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/cpaintdefault/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/cpaintdefault/css/bootstrap-theme.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/cpaintdefault/css/styles.css') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" ref="{{ asset('favicon.ico') }}">
    </head>
    <body>
        <div class="container-fluid">
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {% autoescape false %}{{ message }}{% endautoescape %}
            </div>
        {% endfor %}
        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {% autoescape false %}{{ message }}{% endautoescape %}
            </div>
        {% endfor %}
        </div>
        {% block content %}{% endblock %}
        {% include 'CPaintDefaultBundle::_footer.html.twig' %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/spin.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/cpaintdefault/js/main.js') }}"></script>
            <script>(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');ga('create','UA-44614143-5','auto');ga('send','pageview');</script>
        {% endblock %}
    </body>
</html>